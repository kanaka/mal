(def! present
  (fn* (slides)
    (if (> (count slides) 0)
      (do
        (println (clear))

        (apply println (map (fn* (line) (str "\n        " line)) (first slides)))
        (println "\n\n\n")
        (readline "")
        (present (rest slides))))))

(present slides)

