;; Mal Presentation

(def! clear
  (fn* ()
    (str "[2J[;H")))

(def! bold
  (fn* (s)
    (str "[1m" s "[0m")))

(def! blue
  (fn* (s)
    (str "[1;34m" s "[0m")))

(def! title
  (fn* (s)
    (bold (blue (str s "\n")))))

(def! title2
  (fn* (s)
    (bold (blue s))))


